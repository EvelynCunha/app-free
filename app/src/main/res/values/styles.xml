<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_primary_style">
        <item name="android:background"> @drawable/bg_button_primary </item>
        <item name="android:fontFamily"> @font/open_sans_bold</item>
        <item name="android:elevation"> 10dp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="android:height">54dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button_secundary_style">
        <item name="android:background"> @drawable/bg_button_secundary </item>
        <item name="android:fontFamily"> @font/open_sans_bold</item>
        <item name="android:textColor"> @color/blue</item>
        <item name="android:height">54dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Freela.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="OtpInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/bg_otp_underline</item>
    </style>

</resources>